<%= form_for [@restaurant, @review] do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :rating %>
      <%= f.number_field :rating %>
    </div>

    <div class="field">
      <%= f.label :comment %>
      <%= f.text_field :comment %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
